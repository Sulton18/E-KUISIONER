<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/results_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Results Summary"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tokopedia_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_summary"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tokopedia Results"/>

    <TextView
        android:id="@+id/shopee_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tokopedia_results"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="Shopee Results"/>

</RelativeLayout>
